<!-- Topbar Start -->
<div class="container-fluid d-none d-lg-block">
    <div class="row align-items-center bg-dark px-lg-5">
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-sm bg-dark p-0">
                <ul class="navbar-nav ml-n2">
                    <li class="nav-item border-right border-secondary">
                        <a class="nav-link text-body small" href="#">@DateTime.Now.ToString("dddd, MMMM dd, yyyy")</a>
                    </li>
                    <li class="nav-item border-right border-secondary">
                        <a class="nav-link text-body small" href="/Home/Contact">Advertise</a>
                    </li>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item border-right border-secondary">
                            <a asp-controller="Auth" asp-action="Index" class="nav-link text-body small">Login</a>
                        </li>
                        <li class="nav-item border-right border-secondary">
                            <a asp-controller="Auth" asp-action="Index" class="nav-link text-body small">Register</a>
                        </li>
                    }
                    else
                    {
                        @if (User.IsInRole("Author"))
                        {
                            <li class="nav-item border-right border-secondary">
                                <a asp-area="Author" asp-controller="Dashboard" asp-action="Index" class="nav-link text-body small">Writer Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item border-right border-secondary">
                                <a asp-area="Admin" asp-controller="Dashboard" asp-action="Index" class="nav-link text-body small">Admin Dashboard</a>
                            </li>
                        }
                        <li class="nav-item border-right border-secondary">
                            <a asp-controller="Auth" asp-action="Logout" class="nav-link text-body small">Logout</a>
                        </li>
                    }

                </ul>
            </nav>
        </div>
        <div class="col-lg-3 text-right d-none d-md-block">
            <nav class="navbar navbar-expand-sm bg-dark p-0">
                <ul class="navbar-nav ml-auto mr-n2">
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-twitter"></small></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-facebook-f"></small></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-linkedin-in"></small></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-instagram"></small></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-google-plus-g"></small></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-body" href="#"><small class="fab fa-youtube"></small></a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
    <div class="row align-items-center bg-white py-3 px-lg-5">
        <div class="col-lg-4">
            <a asp-controller="Home" asp-action="Index" class="navbar-brand p-0 d-none d-lg-block">
                <h1 class="m-0 display-4 text-uppercase text-primary">The <span class="text-secondary font-weight-normal">Press Room</span></h1>
            </a>
        </div>
        <div class="col-lg-8 text-center text-lg-right">
            <a href="https://htmlcodex.com"><img class="img-fluid" src="img/ads-728x90.png" alt=""></a>
        </div>
    </div>
</div>
<!-- Topbar End -->