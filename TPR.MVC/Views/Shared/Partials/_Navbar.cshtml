@{
    string GetActive(string page)
    {
        return ViewContext.RouteData.Values["Action"].ToString().Equals(page)
        ? "active" : null;
    }
}

<!-- Navbar Start -->
<div class="container-fluid p-0">
    <nav class="navbar navbar-expand-lg bg-dark navbar-dark py-2 py-lg-0 px-lg-5">
        <a asp-controller="Home" asp-action="Index" class="navbar-brand d-block d-lg-none">
            <h1 class="m-0 display-4 text-uppercase text-primary">TPR<span class="text-white font-weight-normal"> News</span></h1>
        </a>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-between px-0 px-lg-3" id="navbarCollapse">
            <div class="navbar-nav mr-auto py-0">
                <a asp-controller="Home" asp-action="Index" class="nav-item nav-link @GetActive("Index")">Home</a>
                <a asp-controller="Home" asp-action="Category" class="nav-item nav-link @GetActive("Category")">Category</a>
                <a asp-controller="Home" asp-action="About" class="nav-item nav-link @GetActive("About")">About Us</a>
                <a asp-controller="Home" asp-action="Contact" class="nav-item nav-link @GetActive("Contact")">Contact</a>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="Auth" asp-action="MyAccount" class="nav-item nav-link @GetActive("MyAccount")">My Account</a>
                }
            </div>
            <div class="input-group ml-auto d-none d-lg-flex" style="width: 100%; max-width: 300px;">
                <input type="text" class="form-control border-0" placeholder="Keyword">
                <div class="input-group-append">
                    <button class="input-group-text bg-primary text-dark border-0 px-3">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>
</div>
<!-- Navbar End -->